[Unit]
Description=JavaScript Discord Bot Agent
After=network.target


[Service]
Type=simple
ExecStart=/usr/bin/npm run start
WorkingDirectory=/home/ec2-user/repos/neptune-discord-bot
EnvironmentFile=/home/ec2-user/repos/neptune-discord-bot/environment
Restart=on-failure

[Install]
WantedBy=multi-user.target